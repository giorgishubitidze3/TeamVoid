<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tv_subscription_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:text="21 ოქტ"
        android:textColor="@color/white_secondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:background="@color/surface"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="8dp"
        app:cardCornerRadius="12dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subscription_date">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <CheckBox
            android:id="@+id/cb_subscription"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="start|center"
            android:layout_marginHorizontal="8dp" />

            <ImageView
                android:scaleType="centerCrop"
                android:src="@drawable/image_test"
                android:id="@+id/img_subscription"
                android:layout_gravity="center"
                android:layout_width="48dp"
                android:layout_height="48dp"/>

            <TextView
                android:id="@+id/tv_subscription_name"
                android:textColor="@color/white"
                android:layout_marginHorizontal="8dp"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:text="Spotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>
        <TextView
            android:id="@+id/tv_subscription_price"
            android:layout_marginHorizontal="8dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:text="$ 4.99"
            android:layout_gravity="end|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>