<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background of the tube -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" /> <!-- Round corners for the tube -->
            <solid android:color="#e0e0e0" /> <!-- Background color of the tube -->
        </shape>
    </item>

    <!-- Progress part -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="20dp" /> <!-- Same corner radius for the progress part -->
                <solid android:color="#3F51B5" /> <!-- Color of the progress -->
            </shape>
        </clip>
    </item>
</layer-list>